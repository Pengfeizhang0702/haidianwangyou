<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <jni.text.zhzl.com.netizensservices.view.Topbar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:left_text=""
        app:title="海淀网友" />


    <android.support.design.widget.TabLayout
        android:id="@+id/home_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/dp_10"
        app:tabBackground="@color/color_ffffff"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/color_ed6942"
        app:tabIndicatorHeight="@dimen/dp_2"
        app:tabMaxWidth="@dimen/dp_150"
        app:tabMinWidth="@dimen/dp_150"
        app:tabIndicatorFullWidth="false"
        app:tabMode="fixed"
        app:tabPaddingEnd="@dimen/dp_10"
        app:tabPaddingStart="@dimen/dp_15"
        app:tabSelectedTextColor="@color/color_ed6942"
        app:tabTextColor="@color/color_ed6942" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


