<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/stem_user_img"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_margin="@dimen/dp_5"
        android:scaleType="fitXY" />


    <TextView
        android:id="@+id/item_user_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_70"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/stem_user_img"
        android:background="@drawable/bg_icon"
        android:gravity="center_vertical|left"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_5"
        android:text="aaaaa"
        android:textColor="@color/color_474455"
        android:textSize="@dimen/size_16" />

    <ImageView
        android:id="@+id/item_user_content_img"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_150"
        android:layout_margin="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_150"
        android:layout_toRightOf="@+id/stem_user_img"
        android:scaleType="fitXY"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/user_img"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dp_5"
        android:scaleType="fitXY" />


    <TextView
        android:id="@+id/item_user_content_wenzi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toLeftOf="@+id/user_img"
        android:background="@drawable/icon_bgg"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_15"
        android:textColor="@color/color_474455"
        android:textSize="@dimen/size_16" />

    <ImageView
        android:id="@+id/user_content_img"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_150"
        android:layout_margin="@dimen/dp_10"
        android:layout_toLeftOf="@+id/user_img"
        android:scaleType="center"
        android:visibility="gone" />


    <TextView
        android:layout_toLeftOf="@+id/user_img"
        android:id="@+id/item_user_voice_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_bgg"
        android:drawableRight="@mipmap/voice_tv_icon"
        android:gravity="right|center_vertical"
        android:drawablePadding="@dimen/dp_5"
        android:textColor="@color/color_474455"
        android:textSize="@dimen/size_16" />


</RelativeLayout>
